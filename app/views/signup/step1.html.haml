%h2 Sign up
= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"

  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"

  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname

  .field
    = f.label :text
    %br/
    = f.text_area :text

  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name

  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name

  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana

  .field
    = f.label :last_name_kana
    %br/
    = f.text_field :last_name_kana

  .field
    = f.label :birthday
    %br/
    = f.text_field :birthday

  .field
    = f.label :icon
    %br/
    = f.file_field :icon


  .actions
    = f.submit "次へ進む", class: 'btn'

