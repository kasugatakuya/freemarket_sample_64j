.wrapper
  = render "items/top-head"
  - breadcrumb :card, @card
  = render "layouts/breadcrumbs"
.mypage
  .mypage_main
    = render "users/sidehead"
    

    .form-2
      .card-aaa
        %h1
          支払い方法
        .form-user
          .card
            .card-date
              %label クレジットカード一覧
              %li
                .from
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?82960919", class: "form_logo"
                  %br
                  = " ************ " + @default_card_information.last4
                  %br
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
                  = form_tag(card_path, method: :post, id: 'charge-form',  name: "inputForm") do
                    %input{ type: "hidden", name: "card_id", value: "" }
                    %button 削除する
                  .user-text
                    %card
                      %text
                      支払い方法について
                      = icon "fas fa-angle-right", class: "fas fa-angle-right"
  = render "items/top-foot"